<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http//schemas.android.com/apk/res/edu.madcourse.circletouch"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".circletouchActivity" >

    <edu.madcourse.circletouch.circle
        android:id="@+id/circle"
        android:layout_width="match_parent"
        android:layout_height="431dp"
        android:background="@android:color/white"
        android:padding="20dp"
        custom:touchPointPosition="0" />

    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:onClick="onAddCategoriesClicked"
        android:text="Add Categories" />

</LinearLayout>
